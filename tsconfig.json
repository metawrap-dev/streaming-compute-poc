{
  "compilerOptions": {
    "target": "es2022",
    "module": "NodeNext",
    "lib": ["ES2022"],
    "moduleResolution": "NodeNext",
    "rootDir": "src/",
    "outDir": "out",
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true, // Conflict between jest and mocha
    "alwaysStrict": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    // "noImplicitAny": false,
    "noImplicitThis": false,
    // "strictNullChecks": false,
    "allowJs": true
  },
  "exclude": ["node_modules", ".vscode-test", "out", "coverage", "jest.config.js.bak"]
}
